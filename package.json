{
  "name": "genkitx-promptfoo",
  "description": "Genkit AI framework plugin for Promptfoo.",
  "keywords": [
    "genkit",
    "genkit-plugin",
    "promptfoo",
    "eval",
    "ai",
    "genai",
    "generative-ai"
  ],
  "version": "0.1.1",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yukinagae/genkitx-promptfoo.git"
  },
  "author": "Yuki Nagae",
  "license": "Apache-2.0",
  "scripts": {
    "build": "npm run build:clean && tsc",
    "build:clean": "rm -rf ./lib",
    "build:watch": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "check": "biome check ./src ./tests",
    "fix": "biome check --write ./src ./tests",
    "test": "tsx --test ./tests/*_test.ts",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "@genkit-ai/ai": "^0.5.13",
    "@genkit-ai/core": "^0.5.13",
    "promptfoo": "^0.89.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
